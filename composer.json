{
  "name": "maatify/admin-infra",
  "description": "Admin Infrastructure Library providing secure, auditable, and extensible backend foundations (infra-only).",
  "type": "library",
  "license": "MIT",

  "require": {
    "php": ">=8.2"
  },

  "autoload": {
    "psr-4": {
      "Maatify\\AdminInfra\\": [
        "src/",
        "contracts/"
      ]
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Maatify\\AdminInfra\\Tests\\": "tests/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11"
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
