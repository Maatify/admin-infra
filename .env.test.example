# -------------------------
# Database (MySQL)
# -------------------------

TEST_MYSQL_DSN="mysql:host=127.0.0.1;dbname=maatify_test_db;charset=utf8mb4"
TEST_MYSQL_USER="maatify_test"
TEST_MYSQL_PASSWORD="Str0ng@Test_Pass!"

# -------------------------
# PDO Options (Optional)
# -------------------------
# These are usually set in code, but documented here for clarity.

TEST_MYSQL_ATTR_ERRMODE="exception"
TEST_MYSQL_ATTR_DEFAULT_FETCH_MODE="assoc"

# -------------------------
# Testing Behavior
# -------------------------

# Run tests inside transactions with automatic rollback
TEST_DB_USE_TRANSACTIONS=true

# Fail tests if schema file is missing or unreadable
TEST_DB_REQUIRE_SCHEMA=true

# -------------------------
# Schema Paths
# -------------------------
# Used by integration tests to bootstrap database structure

TEST_MYSQL_SCHEMA_PATH="docs/infrastructure/database/mysql/admin_sessions.sql"
